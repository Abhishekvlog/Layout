<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/Hello"
        android:layout_height="wrap_content"
        android:text="Hello AND03"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Layouts"
        android:layout_below="@+id/Hello"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />
    <View
        android:id="@+id/ViewCircle"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ViewCircle"
        android:id="@+id/Name"
        android:text="Name - Lloyed Dcosta"
        android:layout_centerVertical="true"
        android:textSize="28dp"
        android:textColor="#FF0000"
        android:drawableEnd="@drawable/ic_name"
        android:drawablePadding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:text="Age - 50"

        android:textSize="28dp"
        android:textColor="#FF0000"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#00FF00"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:id="@+id/btn"
        />
    <TextView
        android:id="@+id/viewThree"
        android:layout_width="143dp"
        android:layout_height="12dp"
        android:layout_above="@+id/btn"
        android:layout_alignParentEnd="true"
        android:background="#C4C4C4"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="20dp"
/>

    <TextView
        android:id="@+id/viewTwo"
        android:layout_width="166dp"
        android:layout_height="20dp"
        android:layout_above="@+id/viewThree"
        android:layout_alignParentEnd="true"
        android:background="#C4C4C4"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/viewone"
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_above="@+id/viewTwo"
        android:layout_alignParentEnd="true"
        android:background="#C4C4C4"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"/>



</RelativeLayout>